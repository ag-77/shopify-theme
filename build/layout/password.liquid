<!DOCTYPE html>
<html class="no-js no-touch supports-no-cookies" lang="{{ shop.locale }}">

  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    {% render 'html-head-title' %}
    {% render 'html-head-description' %}
    {% render 'html-head-prefetch' %}
    {% render 'html-head-css' %}
    {% render 'html-head-js' %}
    {% render 'html-head-favicon' %}
    {% render 'html-head-canonical' %}
    {% render 'html-head-social-meta-tags' %}
    {% render 'html-head-google' %}
    {{ content_for_header }}
  </head>

  <body class="{% render 'html-template-class' %}">

    <div class="site">
      <main id="MainContent" class="site__main">

        {%- comment %} content_for_layout includes templates/password.liquid {% endcomment -%}
        {{ content_for_layout }}

      </main>

      <footer class="password__footer">
        <div class="site-center">
          {% capture shopify_link %}
            <a href="//www.shopify.com" target="_blank" rel="noopener" title="Create your own online store with Shopify">
              {% render 'global-icon', icon_name: 'shopify' %}
              <span class="visually-hidden">Shopify</span>
            </a>
          {% endcapture %}
          {{ 'general.password_page.powered_by_shopify_html' | t: shopify: shopify_link }}
        </div>
      </footer>

    </div>

  </body>
</html>
