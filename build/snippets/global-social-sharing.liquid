{%- unless wrapper_element -%}
  {%- assign wrapper_element = 'div' -%}
{%- endunless -%}

<{{ wrapper_element }} class="social-sharing {{ sharing_classes }}">
  {%- if settings.share_facebook -%}
    <a class="social-sharing__facebook" target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" rel="noopener">
      {%- render 'global-icon', icon_name: "facebook", icon_size: "sm" -%}
      <span aria-hidden="true">{{ 'general.social.share_on_facebook' | t }}</span>
      <span class="visually-hidden">{{ 'general.social.alt_text.share_on_facebook' | t }}</span>
    </a>
  {%- endif -%}

  {%- if settings.share_twitter -%}
    <a class="social-sharing__twitter" target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" rel="noopener">
      {%- render 'global-icon', icon_name: "twitter", icon_size: "sm" -%}
      <span aria-hidden="true">{{ 'general.social.share_on_twitter' | t }}</span>
      <span class="visually-hidden">{{ 'general.social.alt_text.share_on_twitter' | t }}</span>
    </a>
  {%- endif -%}

  {%- if settings.share_pinterest -%}
    <a class="social-sharing__pinterest" target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}" rel="noopener">
      {%- render 'global-icon', icon_name: "pinterest", icon_size: "sm" -%}
      <span aria-hidden="true">{{ 'general.social.share_on_pinterest' | t }}</span>
      <span class="visually-hidden">{{ 'general.social.alt_text.share_on_pinterest' | t }}</span>
    </a>
  {%- endif -%}

</{{ wrapper_element }}>
