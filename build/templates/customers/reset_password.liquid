{% capture container_content %}
  <div class="form-reset-password">
    {% form 'reset_customer_password', class:'form' %}
      <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>

      {{ form.errors | default_errors }}

      <div class="form-item">
        <div class="form__label-wrapper label--hidden">
          <label for="ResetPassword" class="label--hidden">
            {{ 'customer.reset_password.password' | t }}
          </label>
        </div>
        <div class="form__input-wrapper form-element-text">
          <input type="password"
            name="customer[password]"
            id="ResetPassword"
            class="{% if form.errors contains 'password' %}input-error{% endif %}"
            placeholder="{{ 'customer.reset_password.password' | t }}">
        </div>
      </div>

      <div class="form-item">
        <div class="form__label-wrapper label--hidden">
          <label for="PasswordConfirmation" class="label--hidden">
            {{ 'customer.reset_password.password_confirm' | t }}
          </label>
        </div>
        <div class="form__input-wrapper form-element-text">
          <input type="password"
            name="customer[password_confirmation]"
            id="PasswordConfirmation"
            class="{% if form.errors contains 'password_confirmation' %}input-error{% endif %}"
            placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
        </div>
      </div>

      <div class="form-item form-actions">
        <input type="submit" class="button button--primary" value="{{ 'customer.reset_password.submit' | t }}">
      </div>
    {% endform %}
  </div>
{% endcapture %}

{% capture title %}
  {{ 'customer.reset_password.title' | t }}
{% endcapture %}

{%- render 'container',
    container_content: container_content,
    container_title: title,
    container_header_element: 'h1'
-%}
